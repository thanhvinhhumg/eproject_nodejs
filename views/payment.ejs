                    <div class="summary1 summaryup " id="summaryup">
                        <p onclick="myFunction2()">ESTIMATE SHIPPING AND TAX <i class="fas fa-chevron-up"></i></p>
                    </div>
                    <h4>Enter your destination to get a shipping estimate.</h4>
                    <form  id="form-payment" action="#" method="post">
                        <label for="country">County</label></br>
                        <select name="country" id="country">
                            <option value="United States">United States</option>
                            <option value="America">America</option>
                            <option value="VietNam">VietNam</option>
                            <option value="Italia">Italia</option>
                        </select></br>
                        <label for="state">State/Province</label></br>
                        <select name="country" id="state" >
                            <option value="Please select a region,state or province">Please select a region,state or province</option>
                            <option value="California">United States</option>
                            <option value="HaNoi">HaNoi</option>
                            <option value="Roma">Roma</option>
                            <option value="London">London</option>
                            <option value="NewYork">New York</option>
                        </select></br>
                        <label for="zip">Zip/Postal Code</label></br>
                        <input name="zip" id="zip" type="text" placeholder="Enter your Zip/Code"/></br>
                        <div>
                            <p><b>Best way</b></p>
                            <input type="radio" id="bestway" name="choose" value="bestway">
                            <label for="bestway">Table rate $0.00</label>
                            <p><b>Flat Rate</b></p>
                            <input type="radio" id="fixed" name="choose" value="fixed">
                            <label for="fixed">Fixed $10.00</label>
                        </div>
                    </form>
