<script type="text/javascript">
    function myFunction1() {
        var fomr=document.getElementById("form-payment");
        fomr.classList.add("active");
        var a= document.getElementById("summarydow");
        a.classList.add("active");
        var b= document.getElementById("summaryup");
        b.classList.add("active");
    }
    function myFunction2() {
        var fomr=document.getElementById("form-payment");
        fomr.classList.remove("active");
        var a= document.getElementById("summarydow");
        a.classList.remove("active");
        var b= document.getElementById("summaryup");
        b.classList.remove("active");
    }
    function myFunction3() {
        var fomr=document.getElementById("form-discount");
        fomr.classList.add("active");
        var a= document.getElementById("discountdow");
        a.classList.add("active");
        var b= document.getElementById("discountup");
        b.classList.add("active");
    }
    function myFunction4() {
        var fomr=document.getElementById("form-discount");
        fomr.classList.remove("active");
        var a= document.getElementById("discountdow");
        a.classList.remove("active");
        var b= document.getElementById("discountup");
        b.classList.remove("active");
    }
</script>
