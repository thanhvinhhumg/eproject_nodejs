<section class="section section11">
    <div class="container">
        <div class="grid__row totalorder">
            <div class="grid__colum-8">
                <h3>SHIPPING ADDRESS</h3>
                <form action="#" method="post" class="form-checkout">
                    <label for="email">Email Address<span>*</span></label></br>
                    <div><input name="email" id="email" type="email"required/></div></br>
                    <p>You can create an account after checkout.</p></br>
                    <label for="fname">First Name<span>*</span></label></br>
                    <div><input name="fname" id="fname" type="text"required/></div></br>
                    <label for="lname">Last Name<span>*</span></label></br>
                    <div><input name="lname" id="lname" type="text"required/></div></br>
                    <label for="street">Street Address<span>*</span></label></br>
                    <div><input name="street" id="street" type="text"/></div></br>
                    <label for="city">City<span>*</span></label></br>
                    <div><input name="city" id="city" type="text"/></div></br>
                    <label for="state">State/Province<span>*</span></label></br>
                    <div>
                        <select name="country" id="state" >
                            <option value="Please select a region,state or province">Please select a region,state or province</option>
                            <option value="California">United States<span>*</span></option>
                            <option value="HaNoi">HaNoi</option>
                            <option value="Roma">Roma</option>
                            <option value="London">London</option>
                            <option value="NewYork">New York</option>
                        </select>
                    </div></br>
                    <label for="zip">Zip/Postal Code<span>*</span></label></br>
                    <div><input name="zip" id="zip" type="text" placeholder="Enter your Zip/Code"/></div></br>
                    <label for="country">County<span>*</span></label></br>
                    <div>
                        <select name="country" id="country">
                            <option value="United States">United States</option>
                            <option value="America">America</option>
                            <option value="VietNam">VietNam</option>
                            <option value="Italia">Italia</option>
                        </select>
                    </div></br>
                    <label for="tel">Phone Number<span>*</span></label></br>
                    <div><input name="tel" id="tel" type="tel" required/></div>
                </form>
                <p class="alam"> Please check again your shipping address before checkout! </p>
            </div>
            <div class="grid__colum-4 orderitem">
                <h3> ORDER SUMMARY</h3>
                <div class=" summary1 itemdow" id="itemdow" >
                    <p onclick="myFunction1()">3 Item in Cart<i class="fas fa-chevron-down"></i></p>
                </div>
                <div class="summary1 itemup " id="itemup">
