<script type="text/javascript">
    function myFunction1() {
        var fomr=document.getElementById("item-order");
        fomr.classList.add("active");
        var a= document.getElementById("itemdow");
        a.classList.add("active");
        var b= document.getElementById("itemup");
        b.classList.add("active");
    }
    function myFunction2() {
        var fomr=document.getElementById("item-order");
        fomr.classList.remove("active");
        var a= document.getElementById("itemdow");
        a.classList.remove("active");
        var b= document.getElementById("itemup");
        b.classList.remove("active");
    }
</script>
