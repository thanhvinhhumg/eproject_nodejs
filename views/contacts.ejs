<script>
    var map;
    function initMap() {
        var position = {
            lat: 21.0417031,
            lng: 105.774485
        };
        map = new google.maps.Map(document.getElementById('map'), {
            center: position,
            zoom: 16
        });
        var marker = new google.maps.Marker({
            position:position,
            map:map,
            label:{text:'Zumi Shop',color:'blue'}
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCaj0mHlR-keu-9hsR6d-gB0L9BclG04rk&callback=initMap"
