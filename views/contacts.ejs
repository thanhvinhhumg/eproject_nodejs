<section class="section section8">
    <div class="container">
        <h2>CONTACT INFORMATION</h2>
        <div class="grid__row">
            <div class="grid__colum-6">
                <form action="#" method="post">
                    <div class="grid__row">
                        <div class="grid__colum-6">
                            <label for="name">FULL NAME</label></br>
                            <div><input name="name" id="name" type="text" placeholder="FullName" required></div>
                        </div>
                        <div class="grid__colum-6">
                            <label for="gmail">GMAIL</label></br>
                            <input name="gmail" id="gmail" type="text" placeholder="Gmail" required></br>
                        </div>
                    </div>
                    <label for="tel"> PHONE NUMBER</label></br>
                    <input name="phonenumber" id="tel" type="tel" placeholder="PhoneNumber" required>
                    <textarea placeholder="Message" cols="79" rows="15" required></textarea>
                    <button type="submit">SEND YOUR MESSAGE</button>
                </form>
            </div>
            <div class="grid__colum-6">
                <div id="map"></div>
            </div>
        </div>
    </div>
</section>

